<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="2dp"
    android:background="@color/colorPrimaryBackground"




    android:id="@+id/relativeLayoutProductList">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimaryText"
            android:padding="10dp"
            android:layout_marginBottom="2dp">

            <RelativeLayout
                android:layout_width="100dp"
                android:layout_height="100dp">



            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/ic_launcher_background"
                android:layout_marginRight="10dp"
                android:id="@+id/imageViewProductListImage"/>

                <TextView
                    android:id="@+id/textViewProductListDiscountPercentage"
                    android:padding="2dp"
                    android:layout_width="wrap_content"
                    android:background="@color/colorPrimary"
                    android:textColor="@color/colorPrimaryText"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:textSize="12sp"
                    android:text="50% OFF"
                    />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:orientation="vertical">

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#000000"
                    android:layout_marginBottom="2dp"

                    android:text="Ss and Mod and Mod and Modand Modand Modern"
                    android:id="@+id/textViewProductListProductName"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/textViewProductListProductPrice"
                        android:textStyle="bold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="US $150.40-200.14"
                        android:textSize="15dp"
                        android:layout_marginRight="2dp"
                        android:textColor="@color/colorPrimary"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="/piece"/>
                </LinearLayout>


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TextView

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="US $150.40-200.14"
                        android:layout_marginRight="2dp"
                        android:textSize="11sp"
                        android:id="@+id/textViewProductListProductOldPrice"
                        />
                    <TextView
                        android:textSize="11sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="/piece"/>
                </LinearLayout>


                <LinearLayout
                    android:layout_marginTop="3dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Free Shipping"
                        android:layout_marginRight="2dp"
                        android:textSize="11sp"
                        android:id="@+id/textViewProductListHasFreeShipping"

                        />
                    <TextView

                        android:textSize="12sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="803 Orders"
                        android:layout_weight="1"
                        android:layout_gravity="right"
                        android:gravity="right"
                        android:id="@+id/textViewProductListNumOfOrders"
                        />
                </LinearLayout>


            </LinearLayout>

        </LinearLayout>



    </LinearLayout>

</RelativeLayout>